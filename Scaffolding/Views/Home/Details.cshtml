@model Scaffolding.Models.Customer

@{
    ViewBag.Title = "Details";
}

<div>
    <h3>@ViewBag.Message</h3>
    <h4>Customer</h4>
    <hr />
    <table>
        <tr>
            <td><div style="border-bottom:1px solid black; min-width: 50px !important; text-align:left;">Code</div></td>
            <td style="padding-left:10px"><div style="border-bottom:1px solid black; min-width: 100px !important; text-align:left;">Name</div></td>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.CustomerCode).ToString().Trim()</td>
            <td style="padding-left:10px">@Html.DisplayFor(model => model.CustomerName).ToString().Trim()</td>
        </tr>
    </table>
</div>
<div>
    <br />
    @Html.ActionLink("Back to List", "Index", "Home", null, new { data_role = "link", data_theme = "b", data_mini = "true", data_ajax = "false" })
</div>
